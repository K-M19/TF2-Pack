"UnlitGeneric"
{
	"$translucent" 1
	$detailscale 1
	$detailblendmode 8
	$distancealphafromdetail 1

	// give it a slight outer soft edge
	$softedges 1
	$edgesoftnessstart 0.5
    $edgesoftnessend 0.4
	$scaleedgesoftnessbasedonscreenres 1

	// give it a white outline
	$outline 1
	$outlinecolor "[0.9 0.9 0.8]"
	$outlinestart0 0.41
	$outlinestart1 0.49
	$outlineend0 0.57
	$outlineend1 0.65
	$scaleoutlinesoftnessbasedonscreenres 1

	$distancealpha 1
	"$no_fullbright" 1
	"$ignorez" 1
	"%keywords" "tf"
}

